extends layout

block content
    h1 Books
    form(method='post' action='/books' class='search')
        input#search(name='query' type='text')
    p
        a.button(href='/books/new') Create New Book
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year
        tbody
            each book in booksPg
                tr
                td
                    a(href=`/books/${book.id}`)= book.title
                td= book.author
                td= book.genre
                td= book.year
    .pagination
        - var n = 1
        while n < pages + 1
            a(href=`/books/?page=${n}`)= n++